<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="dlu.nguyenquocthang.dalat186.cloudcomputer.MainActivity">


    <LinearLayout
        android:background="#443fe7"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:background="#e17a25"
            android:layout_weight="2.4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background1" />

        <TextView
            android:background="#87ba3b"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background2" />
        <TextView
            android:background="#0071bc"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background3" />
        <TextView
            android:background="#cc417c"
            android:layout_weight="2.4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:background="#e17a25"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
        <LinearLayout
            android:background="#e17a25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5">

            <LinearLayout
                android:id="@+id/Layout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_background_main"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/layout_background_main" />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#00adef"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5px"
                    android:paddingTop="5dp"
                    android:text="Gói Đám Mây"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:weightSum="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cloud3" />
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cloud2" />
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cloud1" />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="#87ba3b"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8" />

                <LinearLayout
                    android:background="@drawable/button_drive_api"

                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:id="@+id/imageButtonDrive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/btn_drive"
                        android:scaleType="fitCenter"
                        android:textAlignment="gravity" />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:background="@drawable/button_drive_api"

                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:layout_margin="3dp"
                        android:id="@+id/imageButtonDropbox"
                        android:layout_width="match_parent"
                        android:background="@drawable/dropbox_banner"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:textAlignment="gravity"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#cc417c"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:background="#e17a25"
            android:layout_weight="2.4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background1" />

        <TextView
            android:background="#87ba3b"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background2" />
        <TextView
            android:background="#0071bc"
            android:layout_weight="2.3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/layout_background3" />
        <TextView
            android:background="#cc417c"
            android:layout_weight="2.41"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</LinearLayout>
